var arr = [[4, 5, 1, 3], [13, 27, 18, 26], [32, 35, 37, 39], [1000, 1001, 857, 1]]


function findMax(arr){
 const result = [];

  arr.forEach(el => {
    if (Array.isArray(el)) {
      result.push(...findMax(el));
    } else {
      result.push(el);
    }
  });

  return result.reduce((previousLargestNumber, currentLargestNumber) => (currentLargestNumber > previousLargestNumber) ? currentLargestNumber : previousLargestNumber)
}

console.log(findMax(arr))  // should be 1001
